-- A0 and C0 in Kuhl+Giardina
λxs.λys.
  { sum ← [(+)/1 0 x]
  ; T ⟜
    { succDiff ← ((-)\~)
    ; sum ([√(x^2+y^2)]`(succDiff xs) (succDiff ys))
    }
  ; dxs ⟜ (-)\~xs; dys ⟜ (-)\~ys
  ; dts ⟜ [√((x^2)+y^2)]`dxs dys
  ; pxs ← (+)Λ 0 dxs; pys ← (+)Λ 0 dys; pts ⟜ (+)Λ 0 dts
  ; 𝜉 ← (-)`pxs ((*)`((%)`dxs dts) pts)
  ; 𝛿 ← (-)`pys ((*)`((%)`dys dts) pts)
  -- TODO: for T, take last of pts
  ; dtss ⟜ 0⊲((-)\~((^2)'1 pts))
  ; A ← (sum ((*)`((%)`dxs dts) dtss)) + (sum ((*)`𝜉 dts))
  ; C ← (sum ((*)`((%)`dys dts) dtss)) + (sum ((*)`𝛿 dts))
  ; (A,C)
  }
