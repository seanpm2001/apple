λxs.
{
  sum ⇐ [(+)/1 0 x]; fsz ← [ℝ(:x)];
  𝜇 ← [sum x%fsz x] xs;
  𝜎 ← λxs. √(sum ([(x-𝜇)^2]'1 xs)%fsz xs);
  erf ← 
    λz.
    {
      ffact ← [(*)/1 1 (frange 1 x (⌊x))];
      Σ ← λN.λa. (+)/1 0 (a'1 (⍳ 0 N 1));
      (2%√𝜋)*Σ 30 (λn. {nf⟜ℝn; ((_1^n)*z^(2*n+1))%((ffact nf)*(2*nf+1))})
    };
  erf
}
